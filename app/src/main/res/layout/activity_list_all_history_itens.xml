<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/txtTitleActivityLogItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/label"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtDescriptionActivityLogItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitleActivityLogItem"
            android:text="@+id/label"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txtTimeSpentItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtDescriptionActivityLogItem"
            android:text="@+id/label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorGray"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txtDateActivityItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtTimeSpentItem"
            android:layout_below="@+id/txtDescriptionActivityLogItem"
            android:text="@+id/label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorGray"
            android:textSize="12sp" />


</RelativeLayout>
